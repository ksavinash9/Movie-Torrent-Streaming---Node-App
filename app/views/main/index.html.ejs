<div id="movies">
  <% if ( movies && movies.length > 0) { %>
    <div class="row">
    <% for (var i=0; i < movies.length; i++) { %>
        <div class="col-sm-4">  
		
		<div class="panel panel-default">
		<div class="panel-heading">
		<h3 class="panel-title"><%= movies[i].title %></h3></div>
		<div class="panel-body">
        
		<div class="media movie">
        <a class="pull-left" href="<%= baseURL %>/stream?id=<%= movies[i].id %>&file=<%= encodeURIComponent(movies[i].torrents[0].TorrentUrl) %>">
        <img class="media-object" src="<%= movies[i].medium_cover_image %>" alt="<%= movies[i].title %>"></a>
		
		<div class="media-body">
		<p><a class="btn btn-sm btn-warning" href="<%= baseURL %>/stream?id=<%= movies[i].id %>&file=<%= encodeURIComponent(movies[i].torrents[0].url) %>" target="_blank"><span class="glyphicon glyphicon-play"></span> PLAY MOVIE</a></p>
        <p><a class="btn btn-xs btn-default" href="http://www.dereferer.org/?http://www.imdb.com/title/<%= movies[i].imdb_code %>" target="_blank" ><span class="glyphicon glyphicon-facetime-video"></span> IMDB</a></p>

		<div class="well well-sm">
		Rating: <%= movies[i].rating %><br>
		Genre: <%= movies[i].genres %><br>
		Health: <span class="label label-default">S: <%= movies[i].torrents[0].seeds %></span> <span class="label label-default">P: <%= movies[i].torrents[0].peers %></span>
		</div>
		
		</div></div></div></div></div>

      <% if (i % 3 === 2) { %>
        </div><div class="row">
      <% } %>
    <% } %>
  <% } else { %>
    <p class="lead">No results found.</p>
  <% } %>
</div>
<ul class="pager">
  <li class="previous <%= previousDisabled %>"><a href="<%= previousPage %>">&larr; Previous</a></li>
  <li class="next <%= nextDisabled %>"><a href="<%= nextPage %>">Next &rarr;</a></li>
</ul>
