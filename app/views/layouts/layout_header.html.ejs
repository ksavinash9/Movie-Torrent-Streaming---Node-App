    <script>
    function getCookie(sName) {
      var oRegex = new RegExp("(?:; )?" + sName + "=([^;]*);?");
      if (oRegex.test(document.cookie)) {
        return decodeURIComponent(RegExp["$1"]);
      } else {
        return null;
      }
    }

    var theme = getCookie("theme");
    if(theme != null) {
      document.write('<link id="themeCss" rel="stylesheet" href=' + theme + '>');
    }
    else { // use the default theme
      document.write('<link id="themeCss" href="//netdna.bootstrapcdn.com/bootswatch/latest/darkly/bootstrap.min.css" rel="stylesheet">');
    }
    </script>

